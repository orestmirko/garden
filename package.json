{
  "name": "base-auth-api",
  "version": "0.0.1",
  "description": "",
  "author": "maksym.fedenko",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:dev": "nest build --watch",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:db": "docker compose --env-file ./environments/local.env -f docker-compose.local.yml up --build",
    "check:node": "node check-node-version.js",
    "start:watch": "npm run check:node && nest start --watch -e \"node --env-file ./environments/local.env\"",
    "start:debug": "npm run check:node && nest start --debug --watch -e \"node --env-file ./environments/local.env\"",
    "start:dev": "node --env-file ./environments/dev.env dist/src/main",
    "start:qa": "node --env-file ./environments/qa.env dist/src/main",
    "start:stage": "node --env-file ./environments/stage.env dist/src/main",
    "start:prod": "node --env-file ./environments/prod.env dist/src/main",
    "typeorm": "typeorm-ts-node-commonjs --dataSource ./ormconfig.ts",
    "migration:generate": "cross-var npm run typeorm -- migration:generate ./src/database/migrations/$npm_config_name",
    "migration:create": "cross-var typeorm-ts-node-commonjs migration:create ./src/database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run --transaction each",
    "migration:revert": "npm run typeorm -- migration:revert",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test": "jest --config jest.js --forceExit",
    "prepare": "if [ \"$ENVIRONMENT\" === \"local\" ]; then husky install; fi",
    "eslint-output": "eslint-output src",
    "test:cov": "jest --config jest.js --detectOpenHandles --forceExit --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.588.0",
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.8",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cross-var": "^1.1.0",
    "dayjs": "^1.11.11",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.7",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.8",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.24",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "{src,apps,libs,test}/**/*.ts": "eslint --fix"
  },
  "engines": {
    "node": ">=22.2.0 <23.0.0"
  }
}
